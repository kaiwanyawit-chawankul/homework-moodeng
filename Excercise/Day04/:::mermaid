```mermaid
graph LR
    subgraph Normal Page Flow
        A[User interacts with page] --> B{Synchronous POST request};
        B --> C[Server processes request];
        C --> D[Redirect to next page];
    end

    subgraph Seat Page Flow
        E[User interacts with page] --> F{Asynchronous request for seat update};
        F --> G[Server processes seat update];

        subgraph Handling Server Response
            H{Server returns success} --> I[Update UI (e.g., show/hide seats)];
            H -- Server returns failure --> J[Display error message/popup];
            I --> K{Check if seat update successful}
            J --> K
        end

        K -- Update successful --> L[Continue to next page]
        K -- Update not successful --> M[Stay on seat page]
        G --> H
    end

    style A fill:#ccf,stroke:#888,stroke-width:2px
    style E fill:#ccf,stroke:#888,stroke-width:2px
    style D fill:#ccf,stroke:#888,stroke-width:2px
    style L fill:#ccf,stroke:#888,stroke-width:2px
    linkStyle 0,4 stroke:#0a0,stroke-width:2px
    linkStyle 3 stroke:#0a0,stroke-width:2px
    linkStyle 7 stroke:#a00,stroke-width:2px
    linkStyle 8 stroke:#a00,stroke-width:2px
    linkStyle 9 stroke:#0a0,stroke-width:2px
    linkStyle 10 stroke:#a00,stroke-width:2px
    linkStyle 11 stroke:#0a0,stroke-width:2px
    linkStyle 12 stroke:#a00,stroke-width:2px
    linkStyle 13 stroke:#0a0,stroke-width:2px
```